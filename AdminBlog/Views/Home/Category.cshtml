@model IEnumerable<AdminBlog.Models.Category>
@*model olarak bir katregory listesi ekledik burda*@
@{
    ViewData["Title"] = "Category";
}

<button type="button" onclick="$('#CategoryModal').modal('show')" class="btn btn btn-primary">Kategori Ekle</button>

<table class="table table-hover">
  <thead>
    <th scope="col">Id</th>
    <th scope="col">Name</th>
  </thead>
  <tbody>
      @foreach(var item in Model){
        <th scope="row">@item.Id</th>
        <td>@item.Name</td>
      }


  </tbody>



</table>

<div class="modal" id="CategoryModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form method="POST" action="/Home/AddCategory">
      <div class="modal-body">
        <div class="form-group">
            <input type="hidden" name="Id" class="form-control">
            <input type="text" name="Name" class="form-control">  @* name kısımdaki isimler aynı olmak zorunda şu an*@

        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Ekle</button>
      </div>
      </form>
    </div>
  </div>
</div>